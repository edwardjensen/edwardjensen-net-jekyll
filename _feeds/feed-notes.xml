---
layout: null
permalink: /feeds/notes.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="{{ "/assets/css/feed-style.xsl" | relative_url }}"?>

<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }} - Working Notes</title>
    <description>{{ site.description | xml_escape }} - Microblog entries and quick thoughts</description>
    <link>{{ site.url }}/notes/</link>
    <atom:link href="{{ site.url }}/feeds/notes.xml" rel="self" type="application/rss+xml" />
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    
    {% assign sorted_notes = site.working_notes | sort: 'date' | reverse %}
    {% for note in sorted_notes limit:20 %}
    {% if note.date <= site.time %}
    <item>
      <title>{{ note.title | xml_escape }}</title>
      <description>
        {{ note.content | xml_escape }}
        &lt;p&gt;{{ site.feed_footer_text | markdownify }}&lt;/p&gt;
      </description>
      <pubDate>{{ note.date | date_to_rfc822 }}</pubDate>
      <link>{{ note.url | absolute_url }}</link>
      <guid isPermaLink="true">{{ note.url | absolute_url }}</guid>
      
      {% for tag in note.tags %}
      <category>{{ tag | xml_escape }}</category>
      {% endfor %}
    </item>
    {% endif %}
    {% endfor %}
  </channel>
</rss>