---
layout: null
permalink: /feeds/essays.xml
category: essays
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="{{ "/assets/css/feed-style.xsl" | relative_url }}"?>

<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }} - {{ page.category }}</title>
    <description>{{ site.description }} - Posts in category: {{ page.category }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feeds/{{ page.category | slugify }}.xml" rel="self" type="application/rss+xml" />
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    
    {% for post in site.categories[page.category] limit:10 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <description>
        {% if post.show_image != false and post.image %}
        &lt;img src="{{ post.image | absolute_url }}" alt="{{ post.title | xml_escape }}" /&gt;
        {% endif %}
        {{ post.excerpt | xml_escape }}
      </description>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <link>{{ post.url | absolute_url }}</link>
      <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
      
      {% for category in post.categories %}
      <category>{{ category | xml_escape }}</category>
      {% endfor %}
      
      {% for tag in post.tags %}
      <category>{{ tag | xml_escape }}</category>
      {% endfor %}
      
      <footer>{{ site.feed_footer_text | markdownify }}</footer>
    </item>
    {% endfor %}
  </channel>
</rss>