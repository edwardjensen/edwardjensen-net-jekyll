---
layout: null
permalink: /feed.json
---
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": {{ site.title | jsonify }},
  "description": {{ site.description | jsonify }},
  "home_page_url": "{{ site.url }}{{ site.baseurl }}/",
  "feed_url": "{{ site.url }}{{ site.baseurl }}/feed.json",
  "favicon": "{{ site.url }}{{ site.baseurl }}/favicon.ico",
  "expired": false,
  "language": "{{ site.language | default: 'en-US' }}",
  "authors": [
    {
      "name": {{ site.author.name | default: site.title | jsonify }},
      {% if site.author.url %}"url": "{{ site.author.url }}",{% endif %}
      {% if site.author.avatar %}"avatar": "{{ site.author.avatar | absolute_url }}",{% endif %}
      "version": "Jekyll v{{ jekyll.version }}"
    }
  ],
  "items": [
    {% for post in site.posts limit:10 %}
    {
      "id": "{{ post.url | prepend: site.baseurl | prepend: site.url }}",
      "url": "{{ post.url | prepend: site.baseurl | prepend: site.url }}",
      "title": {{ post.title | jsonify }},
      "content_html": {% capture content_html %}{% if post.show_image != false and post.image %}<img src="{{ post.image | absolute_url }}" alt="{{ post.title | xml_escape }}">{% endif %}{{ post.excerpt }}<p>{{ site.feed_footer_text | markdownify }}</p>{% endcapture %}{{ content_html | jsonify }},
      "post_excerpt": {{ post.excerpt | strip_html | strip_newlines | strip | jsonify }},
      "date_published": "{{ post.date | date_to_xmlschema }}",
      {% if post.date-updated %}"date_modified": "{{ post.date-updated | date_to_xmlschema }}",{% endif %}
      {% if post.author %}
      "authors": [
        {
          "name": "{{ post.author }}"
        }
      ],
      {% endif %}
      {% if post.image %}
      "image": "{{ post.image | absolute_url }}",
      {% endif %}
      {% if post.image_alt %}
      "image_alt_text": {{ post.image_alt | jsonify }},
      {% endif %}
      {% if post.image_caption %}
      {% endif %}
      {% if post.tags %}
      "tags": [
        {% for tag in post.tags %}
        "{{ tag }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      {% endif %}
      {% if post.categories %}
      "categories": [
        {% for category in post.categories %}
        "{{ category }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ]{% endif %}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}