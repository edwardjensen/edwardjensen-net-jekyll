{
  "scripts": {
    "a11y": "node ./scripts/a11y-check.js dev",
    "a11y:dev": "node ./scripts/a11y-check.js dev",
    "a11y:local": "node ./scripts/a11y-check.js local-staging",
    "a11y:ci": "npm run build && node ./scripts/a11y-check.js ci",
    "a11y:staging": "node ./scripts/a11y-check.js staging",
    "a11y:prod": "node ./scripts/a11y-check.js prod",
    "a11y:custom": "node ./scripts/a11y-check.js",
    "a11y:report": "node ./scripts/a11y-check.js dev --json --report accessibility-report.json",
    "build": "JEKYLL_ENV=production bundle exec jekyll build && JEKYLL_ENV=production npm run minify",
    "build:serve": "bundle exec jekyll serve --config _config.yml,_config.local.yml --livereload",
    "build:staging": "JEKYLL_ENV=staging bundle exec jekyll build --config _config.yml,_config.staging.yml && JEKYLL_ENV=staging npm run minify",
    "jekyll": "bundle exec jekyll serve --config _config.yml,_config.local.yml,_config.runtime.yml --livereload",
    "jekyll:staging": "bundle exec jekyll serve --config _config.yml,_config.local.yml,_config.runtime.yml --livereload",
    "jekyll:kill": "lsof -ti :4000 | xargs kill",
    "minify": "node ./scripts/minify-html.js",
    "cache:refresh": "pwsh ./scripts/refresh-graphql-cache.ps1",
    "cache:refresh:posts": "pwsh ./scripts/refresh-graphql-cache.ps1 -Collection posts",
    "cache:refresh:photography": "pwsh ./scripts/refresh-graphql-cache.ps1 -Collection photography"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "html-minifier-terser": "^7.2.0",
    "js-yaml": "^4.1.0",
    "pa11y": "^9.0.1",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.16"
  }
}
